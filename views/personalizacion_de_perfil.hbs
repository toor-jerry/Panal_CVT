<div class="container p-5">
    <div class="row mt-5">
        <h5 class="mx-auto">El personalizar tu cuenta no es un paso necesario. Pero es tu "toque personal".
            <a href="/">Omitir este paso.</a>
        </h5>
        <div class="col-lg-8 animated bounceIn">
            <form
                class="user animated bounceIn">
                <!-- Nickname -->
                <div class="form-row align-items-center">
                    <div class="col-5 text-center">
                        <label for="nickname" class="text-dark font-weight-bold">Ingresa tu nickname</label>
                        <input type="text" id="nickname" class="form-control form-control-user text-center" placeholder="Nombre de Pila" name="nickname" required>
                    </div>
                    <!-- Licenciatura -->
                    <div class="col text-center">
                        <label for="licenciatura" class="text-dark font-weight-bold">Selecciona tu licenciatura</label>
                        <select id="licenciatura" class="form-control" name="licenciatura" required>
                            <option value="LIA" selected>LIA - Licenciatura en Informática Administrativa</option>
                            <option value="ICO">ICO - Licenciatura en Ingeniería eb Computación</option>
                        </select>
                    </div>
                </div>

                <!-- Género -->
                <div class="form-row align-items-center">
                    <div class="col-5 text-center">
                        <label class="text-dark font-weight-bold">Selecciona tu género</label>
                        <div class="form-row align-items-center">
                            <div class="col text-center">
                                <div class="custom-control custom-radio">
                                    <input type="radio" name="genero" id="hombre" class="custom-control-input">
                                    <label for="hombre" class="custom-control-label text-dark">Hombre</label>
                                </div>
                            </div>
                            <div class="col text-center">
                                <div class="custom-control custom-radio">
                                    <input type="radio" name="genero" id="mujer" class="custom-control-input">
                                    <label for="mujer" class="custom-control-label text-dark">Mujer</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Progreso -->
                    <div class="col text-center">
                        <label for="progreso" class="text-dark font-weight-bold">Selecciona tu progreso</label>
                        <select id="progreso" class="form-control" name="progreso" required>
                            <option selected>Semestre / Egresado</option>
                            <option value="1">Primer Semestre</option>
                            <option value="2">Segundo Semestre</option>
                            <option value="3">Tercer Semestre</option>
                            <option value="4">Cuarto Semestre</option>
                            <option value="5">Quinto Semestre</option>
                            <option value="6">Sexto Semestre</option>
                            <option value="7">Séptimo Semestre</option>
                            <option value="8">Octavo Semestre</option>
                            <option value="9">Noveno Semestre</option>
                            <option value="Egresado">Egresado</option>
                        </select>
                    </div>
                </div>


                <div
                    class="form-row">
                    <!-- Fecha de nacimiento -->
                    <div class="col-5 text-center">
                        <label class="text-dark font-weight-bold">Fecha de nacimiento</label>
                        <div class="form-row">
                            <div class="col">
                                <input type="number" class="form-control form-control-user text-center" placeholder="DD" name="fecha_nacimiento_dia" min="1" max="31" required>
                            </div>
                            <div class="col">
                                <input type="number" class="form-control form-control-user text-center" placeholder="MM" name="fecha_nacimiento_mes" min="1" max="12" required>
                            </div>
                            <div class="col">
                                <input type="number" class="form-control form-control-user text-center" placeholder="AA" name="fecha_nacimiento_anio" min="1990" max="31" required>
                            </div>
                        </div>
                    </div>
                    <!-- Términos y condiones -->
                    <div class="col text-justify p-4">
                        <input type="checkbox" id="terminos" class="form-check-input" value="" required>
                        <label for="terminos" class="form-check-label text-dark">Acepto que los datos proporcionados sean usados con fines de identificación y referencia dentro del sistema "Panal de Trabajo".</label>
                    </div>
                </div>

                <!-- Descripción -->
                <div class="form-group text-center">
                    <label for="descripcion" class="text-dark font-weight-bold">Descripción</label>
                    <textarea class="form-control form-control-user text-center" id="descripcion" placeholder="300 carácteres máximo" maxlength="300"></textarea>
                </div>


        </div>

        <div class="col-lg text-center">
            <label class="text-dark font-weight-bold">Cambiar foto de perfil</label>
            <br>
            <i class="fa fa-user-plus fa-10x" aria-hidden="true"></i>
            <hr>
            <div class="form-group w-75 mx-auto">
                <button type="submit" class="btn btn-success btn-user btn-block btn-lg">
                    Guardar cambios
                </button>
            </div>
            </form>
        </div>
    </div>
    <!-- Fin de la fila -->
</div>
{{> footer }}
