{{> head }}
{{> navbar_perfil }}


<div class="container p-5">
    <div class="row mt-5">
        <div class="col">
            <div class="alert alert-danger" role="alert" id="alert_connection">
            No cuenta con conexión, reconectando .... <img src="/img/Wedges-3s-200px.svg" style="height: 30px;">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-5 animated bounceIn text-center">
            <div class="row">
                <div class="col">
                    {{#if usuario.foto}}
                    <img class="z-depth-2 foto-perfil" src="/archivos/fotografias/{{usuario.foto}}" data-holder-rendered="true">
                {{/if}}
                </div>
            </div>
            <div class="row">
                <div class="col">
                   <h5 class="text-dark font-weight-bold">{{ usuario.nombre }} {{usuario.apellidos}}</h5>
                   <h6 class="text-dark font-weight-bold">{{ usuario.descripcion }}</h6>
                </div>
            </div>
            <div class="row text-dark text-dark font-weight-bold">
                {{#if usuario.edad }}
                <div class="col">
                    {{ usuario.edad }} años
                </div>
                {{/if}}

                {{#if usuario.sexo }}
                <div class="col">
                    {{ usuario.sexo }}
                </div>
                {{/if}}

                {{#if usuario.progreso }}
                <div class="col">
                    {{ usuario.progreso }}
                </div>
                {{/if}}
            </div>


            <div class="row mb-3 mt-3">
                <div class="col col-lg-8 mx-auto">
                    <a href="/cv" class="btn btn-warning btn-block">Editar mi Curriculum Vitae</a>
                </div>
            </div>

            <div class="row">
                <div class="col col-lg-8 mx-auto">
                    <a href="#" class="btn btn-warning btn-block">Descargar CV</a>
                </div>
            </div>
        </div>


        <div class="col">
            <div class="row">
                <div class="col">
                    <form class="form-inline">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <button class="btn btn-bg bg-white" type="submit"><i class="fa-solid fa-magnifying-glass text-warning fa-lg"></i></button>
                            </div>
                            <input class="form-control" type="search" placeholder="Buscar vacantes" aria-label="Search" aria-describedby="basic-addon1"></div>
                            
                                
                            </form>
                        </div>
                        <div class="col">
                            <select class="custom-select mr-sm-2 border border-warning" id="inlineFormCustomSelect">
                                <option selected>Lista de convenios vigentes</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                    </div>

                    <!-- Vacantes -->
                    <div class="row">
                        <div class="col">
                            {{#each vacantes.data}}
<div class="card text-center border-info mb-3">
        <div class="card-body">
          <h3 class="texto-oscuro">{{this.puesto}}</h3>
          <h4 class="card-title">{{ this.empresa.razonSocial }}</h4>
          {{#if this.empresa.foto}}
          <img src="{{ this.empresa.foto }}" class="card-img foto-empresa" alt="Foto empresa">
          {{/if}}
          
          <h5 class="card-text text-justify text-truncate mt-2" style="max-width: 500px;">Funciones: <b>{{ this.funciones }}</b></h5>
          <div class="row">
              <div class="col">
                  <h5>Salario: <b>{{this.salario}}</b></h5>
              </div>
              <div class="col">
                  <h5>Horarios: <b>{{this.horarios}}</b></h5>
              </div>
          </div>
          <p>Publicada: <b>{{fechaCreacion}}</b></p>
          <div class="row">
              <div class="col">
                  <a href="#" class="btn btn-info">Ver vacante</a>
              </div>
              <div class="col">
                  <a href="#" class="btn btn-primary">Postularme</a>
              </div>
          </div>
        </div>
                        </div>
                        {{/each}}
                    </div>

                </div>
                <!-- Fin de la fila -->
            </div>
            <!-- Fin container -->
            </div>
            {{> footer }}
