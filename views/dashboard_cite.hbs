 {{> head }}


<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    {{> sidebar_dashboard }}
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <!-- Topbar -->
            {{> top_bar_dashboard }}
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-2 text-gray-800">Cita</h1>
                <hr>
                <div class="card mx-auto text-center" style="width: 75%;">
                    <div class="card-body">
                        <h5 class="card-title">{{cite.date}} : {{cite.hour}} 
                                            <a class="btn btn-danger" onclick="deleteCite('{{cite._id}}')">
                                            <i class="fas fa-trash-alt"></i>
                                            </a></h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{cite.description}}</h6>
                        <hr>
                        <h5 class="font-weight-bold"><i class="fa fa-user-circle" aria-hidden="true"></i> Solicitante</h5>
                        <div class="text-left ml-5">
                            <h6> <i class="fas fa-user-alt    "></i> Nombre: <b>{{cite.full_name}}</b></h6>
                        <h6><i class="fab fa-google-plus text-danger" aria-hidden="true" style="font-size: 20px;"></i> Correo electr√≥nico: <b>{{cite.email}}</b></h6>
                        <h6><i class="fab fa-whatsapp text-success" aria-hidden="true" style="font-size: 20px;"></i> Whatsapp: <b>{{cite.whatsapp}}</b></h6>
                        </div>
                        <a href="/cite/all" class="card-link">Mostrar todas las citas</a>
                    </div>
                </div>


            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Page Wrapper -->


        <!-- Footer -->
        {{> footer_dashboard }}
        <!-- End of Footer -->
    </div>
    <!-- End of Main Content -->
</div>
<!-- End of Page Wrapper -->

{{> end_file }}

<!-- Page level plugins -->
<script src="/libs/datatables/jquery.dataTables.min.js"></script>
<script src="/libs/datatables/dataTables.bootstrap4.min.js"></script>

<!-- Page level custom scripts -->
<script src="/js/demo/datatables-demo.js"></script>
<script src="/js/function_dashboard_cite.js"></script>