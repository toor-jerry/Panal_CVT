{{#if usuario.recuperacionPassword}}
<div class="row">
    <div class="col">
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <h3>
                <i class="fas fa-exclamation-triangle text-danger" aria-hidden="true"></i>
                <strong>Alerta!</strong> Ingresó en modo "Cambio de contraseña"
                <a role="button" type="button" class="alert-link" data-toggle="modal"
                    data-target="#cambioPasswordModal">Cambiar contraseña!</a>
                .
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span class="texto-oscuro" aria-hidden="true">&times;</span>
                </button>
            </h3>
        </div>
    </div>
</div>
{{/if}}
