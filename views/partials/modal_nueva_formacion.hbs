<div class="modal fade" id="formacionModal" tabindex="-1" role="dialog" aria-labelledby="formacionModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="formacionModalLabel">Agregar una nueva formación académica:</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="user" id="formacion-form">

                    <div class="form-row">
                        <div class="form-group col-md-5">
                            <input type="text" id="inputEscuela" class="form-control text-center form-control-lg"
                                placeholder="Centro Educativo" required>
                        </div>
                        <div class="form-group col">
                            {{> selectNivelAcademico_Partial mostrarId=true }}
                        </div>
                        <div class="form-group col-md-3">
                            <input type="text" id="inputPeriodoForm" class="form-control text-center form-control-lg"
                                placeholder="Periodo (2010-2011)" required>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-info btn-user btn-block">
                        Agregar formación
                    </button>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" type="button" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>