<div class="container border border-warning rounded m-0 pt-0 pb-0 ">
                {{#each usuario.empleos}}
                <div class="form-row mt-3">
                    <div class="form-row">
                        <div class="form-group col-md-5">
                            <input type="text" class="form-control text-center form-control-lg" disabled
                                placeholder="Nombre de la empresa" value="{{ this.nombreEmpresa }}">
                        </div>
                        <div class="form-group col-md-5">
                            <input type="text" class="form-control text-center form-control-lg" disabled
                                placeholder="Puesto" value="{{ this.puestoDesempenado }}">
                        </div>
                        <div class="form-group col">
                            <a class="btn btn-danger" onclick="borrarEmpleo('{{this._id}}')">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col">
                            <input type="text" disabled class="form-control text-center form-control-lg"
                                placeholder="Periodo" value="{{ this.periodo }}">
                        </div>
                        <div class="form-group col">
                            <input type="number" disabled class="form-control text-center form-control-lg"
                                placeholder="Salario" value="{{ this.salario }}">
                        </div>
                    </div>

                    <textarea class="form-control form-control-lg texto-oscuro" disabled id="inputExpLaboral"
                        placeholder="Describe en 100 palabras la experiencia ganada en tus trabajos anteriores, conocimientos adquiridos, habilidades y tÃ©cnicas."
                        rows="2">{{ this.funciones }}</textarea>
                </div>
                <hr>
                {{/each}}
                <button role="button" type="button" class="btn btn-success mb-2" data-toggle="modal"
                    data-target="#empleoModal"><i class="fa-solid fa-circle-plus fa-2x text-warning"
                        aria-hidden="true"></i>
                    Nuevo empleo</button>
            </div>