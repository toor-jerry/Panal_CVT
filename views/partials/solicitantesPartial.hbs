{{#each solicitantes.data}}
<div class="card text-center border-info mb-3">
    <div class="card-body">
        <h4 class="card-title texto-oscuro">{{ this.usuario.nombre }}</h4>
        {{#if this.usuario.foto}}
        <img src="/archivos/fotografias/{{ this.usuario.foto }}" class="card-img foto-empresa" alt="Fotografía">
        {{/if}}

        <h5 class="font-weight-bold mt-3">
            {{> licenciaturas licenciatura=this.usuario.licenciatura }}
        </h5>
        <p class="card-text text-justify">{{ this.usuario.descripcion }}</p>
        <div class="row">
            {{#if this.usuario.edad}}
            <div class="col">
                Edad:
                <b>{{ this.usuario.edad }}</b>
                años
            </div>
            {{/if}}
            {{#if this.usuario.sexo}}
            <div class="col">
                Sexo:
                <b>{{ this.usuario.sexo }}</b>
            </div>
            {{/if}}
            {{#if this.usuario.progreso}}
            <div class="col">
                <h5 class="texto-verde">{{ this.usuario.progreso }}</h5>
            </div>
            {{/if}}
        </div>

        <div class="row">
            <div class="col">
                <a href="#" class="btn btn-success">Reclutar</a>
            </div>
            <div class="col">
                <a href="/perfil/informacion/{{this.usuario._id}}" class="btn btn-info">Ver perfil</a>
            </div>

            <div class="col">
                <a href="/pdf?idUsuario={{this.usuario._id}}" target="_blank"class="btn btn-warning">Descargar CV</a>
            </div>
        </div>
    </div>
</div>
{{/each}}