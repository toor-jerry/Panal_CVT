{{> head }}
{{> navbar }}


<div class="container p-5">
    <div class="row mt-5 text-center">
        <div class="col">
            <h3>Se registro la vacante con éxito..</h3>
        </div>
                <!-- Fin de la fila -->
            </div>


<div class="row mt-3">
    <!-- Foto de la empresa -->
                    {{#if usuario.foto}}
                  <div class="col">
                    <img src="{{ empresa.foto_empresa }}" class="card-img foto-empresa" alt="Foto empresa">
                  </div>
                {{/if}}            
                <!-- Información de la vacante -->
                <div class="col text-dark font-weight-bold text-right">
                    <h3 class="texto-verde">{{ empresa.nombre }}</h3>
                    <h4>{{ empresa.razon_social }}</h4>
                    <h5>{{ empresa.correo }}</h5>
                    <h5>{{ empresa.telefono }}</h5>
                    <h5>{{ empresa.descripcion_empresa }}</h5>
                </div>
</div>
<hr>
<div class="row text-center text-dark font-weight-bold">
    <div class="col">
        <h4>Puesto</h4>
        <div class="alert alert-light" role="alert">
  {{ vacante.puesto }}
</div>
    </div>
    <div class="col">
        <h4>Horarios</h4>
<div class="alert alert-light" role="alert">
  {{ vacante.horarios }}
</div>
    </div>
</div>



<div class="row text-center text-dark font-weight-bold">
    <div class="col">
        <h4>Funciones</h4>
        <div class="alert alert-light" role="alert">
  {{ vacante.funciones }}
</div>
    </div>
    <div class="col">
        <h4>Notas</h4>
<div class="alert alert-light" role="alert">
  {{ vacante.notas }}
</div>
    </div>
</div>



<div class="row text-center text-dark font-weight-bold">
    <div class="col">
        <h4>Salario</h4>
        <div class="alert alert-light" role="alert">
  $ {{ vacante.salario }}
</div>
    </div>
    <div class="col">
        <h4>Notas</h4>
                        <div class="custom-file">
                        <input type="file" class="custom-file-input cursor-puntero" id="inputCV" lang="es" accept="application/pdf">
                        <label class="custom-file-label cursor-puntero" for="logo" id="labelCVPDF"><b><i class="fa fa-plus text-primary" aria-hidden="true" style="font-size: 25px;"></i>  Adjuntar CV</b></label>
            </div>
    </div>
</div>

<div class="row">
    <div class="col-5 mx-auto">
        <button type="submit" class="btn btn-success btn-user btn-block">
                            Continuar
                        </button>
    </div>
</div>


            <!-- Fin container -->
            </div>
            {{> footer }}
