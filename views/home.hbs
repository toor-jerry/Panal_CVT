{{> head }}

<nav class="navbar navbar-expand-lg fixed-top navbar-light bg-gradient-dark">
    <a class="navbar-brand text-decoration-none text-white" href="/">
        <img src="/img/icono-panal.png" height="45" class="d-inline-block align-top" alt="">
    </a>
</nav>

<div class="container text-center p-5">
    <div class="row mt-5 ">
        <div class="col-lg-5 mt-5">
            <form class="user animated bounceIn back-Yellow-Black bordes-form p-5" id="form-usuario">

                <div class="form-group row">
                    <div
                        class="col">
                        <!-- Email -->
                        <div class="input-group mb-3">
                            <input type="email" class="form-control form-control-user ml-2 text-center font-weight-bold" placeholder="Correo Electrónico" id="inputEmail" name="email" required>
                        </div>

                        <!-- Password -->
                        <div class="input-group mb-3">
                            <input type="password" class="form-control form-control-user ml-2 text-center font-weight-bold" placeholder="Contraseña" id="inputPassword" name="password" required>
                        </div>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col">
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            Entrar
                        </button>
                    </div>
                </div>

                <hr>

                <div class="form-group row">
                    <div class="col">
                        <a class="font-weight-bold" href="/usuario/recuperar_contrasenia">
                    Reestablecer contraseña
                </a>
                    </div>
                </div>
            <div class="form-group row">
                <div class="col">
                    <a href="/registro/tipo_registro" class="btn btn-block btn-info btn-user" type="button">
                    Registrar nuevo perfil
                    </a>
                </div>
            </div>
            </form>
        </div>
        <!-- Fin columna formulario-->
        <div class="col-lg-5 d-none d-lg-block p-5">
                <img src="/img/logo.png" class="img img-fluid filtro">
        </div>
    </div><!-- Fin de la fila -->

    <div class="row">
        <div class="col text-right">
            <a class="font-weight-bold" target="_blank" href="/files/Aviso_de_privacidad.pdf">
                    Aviso de privacidad
                </a>
        </div>
    </div>
</div>


