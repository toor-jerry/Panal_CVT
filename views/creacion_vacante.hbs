{{> head }}
{{> navbar_perfil }}


<div class="container p-5">
    <div class="row mt-5">
        <div class="col-lg-5 animated bounceIn">
            <div class="row">
            <div class="col text-center">
                <img class="z-depth-2 foto-empresa mx-auto" src="{{ foto }}"
                    data-holder-rendered="true">
                   <h5 class="texto-verde">{{ nombre }}</h5>
                   <h5 class="text-dark font-weight-bold">{{ razon_social }}</h5>
                   <h6 class="text-dark font-weight-bold">{{ descripcion }}</h6>
                   <h6 class="text-dark font-weight-bold">{{ direccion }}</h6>
            </div>
            </div>

        </div>


        <div class="col text-center">
            <div class="row">
                <div class="col">
                    <div class="alert alert-light font-weight-bold" role="alert">
                    Nueva vacante
                    </div>
                  

                <form class="user animated bounceIn">
                <!-- Fila -->
                 <div class="form-row">
                     <div class="col">
                         <!-- Puesto -->
                        <div class="form-group texto-oscuro">Puesto</label>
                            <input type="text" id="puesto" class="form-control form-control-user" placeholder="Puesto solicitado" name="puesto" required>
                        </div>
                        </div>
                        <div class="col">
                         <!-- Horarios -->
                        <div class="form-group texto-oscuro">Horarios</label>
                            <input type="text" id="horarios" class="form-control form-control-user" placeholder="Lunes - SÃ¡bado 09:00 am - 05:00 pm" name="horarios" required>
                        </div>
                     </div>
                    </div>

                    <!-- Fila -->
                 <div class="form-row">
                     <div class="col">
                         <!-- Puesto -->
                        <div class="form-group texto-oscuro">Funciones</label>
                        <textarea class="form-control" id="funciones" name="funciones" placeholder="Funciones a realizar" rows="3" required></textarea>
                        </div>
                        </div>
                    </div>

                    <!-- Fila -->
                 <div class="form-row">
                     <div class="col">
                         <!-- Salario -->
                        <div class="form-group texto-oscuro">Salario $</label>
                            <input type="number" id="salario" class="form-control form-control-user" placeholder="Monto en pesos" name="salario" required>
                        </div>
                        </div>
                        <div class="col">
                         <!-- Notas -->
                        <div class="form-group texto-oscuro">Notas</label>
                            <input type="text" id="notas" class="form-control form-control-user" placeholder="Notas extras" name="notas" required>
                        </div>
                     </div>
                    </div>


                <div class="form-group w-50 mx-auto">
                    <button type="submit" class="btn btn-success btn-user btn-block">
                        Publicar
                    </button>
                </div>

            </form>
                    </div>

                    <!-- Solicitantes -->
                    <div class="row">
                        <div class="col">
                            <div class="alert alert-light font-weight-bold" role="alert">
                    Mis vacantes
                    </div>
                        {{#if (esMayor (longitudArreglo vacantes) 0) }}    
                            {{#each vacantes}}
                            <div class="card border-info mb-3">
                                    <div class="card-body">
                                    <h4 class="card-title">{{ this.nombre_empresa }}</h4>
                                    {{#if this.foto_empresa}}
                                    <img src="{{ this.foto_empresa }}" class="card-img foto-empresa" alt="Foto empresa">
                                    {{/if}}
                                    
                                    <p class="card-text text-truncate" style="max-width: 500px;">{{ this.descripcion_vacante }}</p>
                                    <div class="row">
                                        <div class="col">
                                            <a href="#" class="btn btn-info"><i class="fa fa-pen-to-square" aria-hidden="true"></i> Revisar</a>
                                        </div>
                                        <div class="col">
                                            <a href="#" class="btn btn-danger"><i class="fa fa-trash-can" aria-hidden="true"></i> Eliminar</a>
                                        </div>
                                    </div>
                                    </div>
                                                    </div>
                        {{/each}}
                        {{else}}
                        <div class="alert alert-danger font-weight-bold" role="alert">
                        No se ha publicado ninguna vacante
                        </div>
                        {{/if}}
                        <!-- Fin columna -->
                    </div>

                </div>
                <!-- Fin de la fila -->
            </div>
            <!-- Fin container -->
            </div>
            {{> footer }}
